<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: "山田太郎" %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control', placeholder: "sample@gmail.com" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', placeholder: "*************" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "*************" %>
      
      <%= f.label :region %>
      <%= f.text_field :region, class: 'form-control', placeholder: "Japan" %>

      <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>